'use client';
import { useEffect, useState } from "react";
import { useUserStore } from "../store/userStore";
import { redirect } from "next/navigation";[]
export default function () {
    const { playerName } = useUserStore.getState();
    const [isConnected, setIsConnected] = useState(false);
    useEffect(() => {}, []);

    if (playerName.length < 1){
        redirect("/")
    }

    return (
        <div className="flex flex-col gap-2">
            <p>player name is: {playerName}</p>
            {isConnected ? <p>connected</p> : <p>not connected</p>}
            <button className="border-2 border-white p-3 m-2" onClick={e => setIsConnected(v => !v)}> connect </button>
        </div>
    )
}